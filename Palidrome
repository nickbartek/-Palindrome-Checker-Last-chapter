function palindrome(str) {
let str2=str= str.toLowerCase();

str2=str2.split(/[^a-z,^0-9]/).join('')
str2=str2.split(',').join('')          //remove comma
str2=str2.split('').reverse().join('')
 
 str= str.split('').join('')
 str =str.split(/[^a-z,^0-9]/).join('')
 str= str.split(',').join('') 
  console.log(str,str2)

 if(str2===str){return true;}
 else return false
}
palindrome('A man, a plan, a canal. Panama')
